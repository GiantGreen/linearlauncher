<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:lb="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/grid_item_width"
        android:layout_height="@dimen/grid_item_heitht"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <LinearLayout android:layout_width="@dimen/grid_item_iv_width"
                  android:layout_height="@dimen/grid_item_iv_heitht"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/grid_item_iv_margin_top"
                  android:padding="10dp"
                  android:background="@drawable/bg_grid_item">
        <com.ayst.linearlauncher.widget.CircleImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:contentDescription="@null"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_item_tv_margin_top"
            android:gravity="center"
            android:focusable="false"
            android:textColor="@color/white"
            android:textSize="@dimen/scale_item_tv_text_size"/>

</LinearLayout>